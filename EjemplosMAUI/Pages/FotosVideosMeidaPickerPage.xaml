<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemplosMAUI.Pages.FotosVideosMeidaPickerPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="FotosVideosMeidaPickerPage">
    <ScrollView>
        <VerticalStackLayout>
            <Image x:Name="imagen"
                   WidthRequest="300" HeightRequest="300"
                   HorizontalOptions="Center"/>
            <Button x:Name="btnCamara" Text="Tomar foto" Clicked="OnTomarFotoClic"/>
            <Button x:Name="btnCamaraVideo" Text="Grabar video" Clicked="OnGrabarVideoClic"/>
            <toolkit:MediaElement x:Name="video"
                    WidthRequest="300" HeightRequest="240"
                    HorizontalOptions="Center"/>
            <Label x:Name="mensaje" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>